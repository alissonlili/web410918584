}

<h2>welcome!<h2/>

@using (Html.BeginForm("Index", "Test", FormMethod.Post))
{
 <div>
     帳號:@Html.TextBox("account") <br />
     密碼:@Html.Password("password") <br />
     年齡:@Html.TextBox("age") <br />
     性別:@Html.RadioButton("gender", "A")男
     @Html.RadioButton("gender", "B")女<br />
     興趣:@Html.CheckBox("reading", "A")看書
     @Html.CheckBox("skiing", "B")滑雪<br />
     關於我:@Html.TextArea("about")
 </div>
}

